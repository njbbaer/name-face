<h2>Quiz</h2>

<p>
  <strong>Face:</strong>
  <%= image_tag @person.face.standard.url %>
</p>

<p>
  <strong>Name:</strong>
  <button onclick="name_button()" id="nameButton">Reveal Name</button>
  <span id="hiddenName" style="display: none"><%= @person.name %></span>
</p>

<table>
  <tr>
    <td><%= button_to 'Correct', quiz_path %></td>
    <td><%= button_to 'Incorrect', quiz_path %></td>
  </tr>
</table>